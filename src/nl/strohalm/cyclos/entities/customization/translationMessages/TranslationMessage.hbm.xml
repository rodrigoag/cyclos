<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class dynamic-insert="true" dynamic-update="true" name="nl.strohalm.cyclos.entities.customization.translationMessages.TranslationMessage" table="translation_messages">
		<id name="id" type="long">
		    <column name="id" sql-type="integer" />
			<generator class="native"/>
		</id>
		<properties name="uniqueKey" unique="true">
			<property name="key" column="msg_key" update="false" type="string" length="100" not-null="true"/>
			<property name="locale" update="false" type="string" length="10" />
		</properties>
		<property name="value" column="value" type="text"/>
	</class>

</hibernate-mapping>
